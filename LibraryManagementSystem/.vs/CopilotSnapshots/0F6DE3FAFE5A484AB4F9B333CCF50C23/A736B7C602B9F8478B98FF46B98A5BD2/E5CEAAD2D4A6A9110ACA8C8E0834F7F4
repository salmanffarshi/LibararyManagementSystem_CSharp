        private void dateTimePicker1_KeyPress(object sender, KeyPressEventArgs e)
        {
            if (e.KeyChar == (char)Keys.Enter)
            {
                comboBoxDepertment.Focus();
            }
        }

        private void comboBoxDepertment_KeyPress(object sender, KeyPressEventArgs e)
        {
            // if enter pressed and not selected from combo box, then drop down the combo box then i can move with arrow keys and if enter pressed again then select the item and if again enter pressed then perform registration button click
            if (e.KeyChar == (char)Keys.Enter)
            {
                if (comboBoxDepertment.DroppedDown == false)
                {
                    comboBoxDepertment.DroppedDown = true;
                }
               if (comboBoxDepertment.DroppedDown == true && comboBoxDepertment.SelectedItem != null)
                {
                    buttonRegistration.PerformClick();
                }
            }
            //if (e.KeyChar == (char)Keys.Enter)
            //{
            //    buttonRegistration.PerformClick();
            //}
        }




